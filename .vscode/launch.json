    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        // https://stackoverflow.com/questions/17413398/how-can-i-debug-scrapy#71429566
        {
            "name": "Launch scrapy spider",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/scrapy",
            "cwd": "${workspaceFolder}/products",
            "args": [
                "crawl",
                "products_spider"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}